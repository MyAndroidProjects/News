<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rss_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_small"
    card_view:cardBackgroundColor="@color/primary_background"
    card_view:cardCornerRadius="@dimen/size_xsmall"
    card_view:cardElevation="@dimen/size_xsmall">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/news_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_xsmall"
                android:contentDescription="@string/rss_news_content"
                android:maxHeight="@dimen/size_xxxxxlarge"
                android:maxWidth="@dimen/size_xxxxxlarge"
                android:minHeight="@dimen/size_xxxxlarge"
                android:minWidth="@dimen/size_xxxxlarge"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_default_news_72" />

            <TextView
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:id="@+id/news_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_small"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <TextView
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/news_cut_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_small"
            android:layout_marginStart="@dimen/size_small"
            android:textAlignment="textStart" />
        <TextView
            android:textAppearance="@style/TextAppearance.MaterialComponents.Overline"
            android:id="@+id/pub_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_small"
            android:layout_marginStart="@dimen/size_small"
            android:textAlignment="textStart" />
    </LinearLayout>


</android.support.v7.widget.CardView>